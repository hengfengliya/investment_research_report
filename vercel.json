{
  "version": 2,
  "framework": "vite",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_VERSION": "20"
  },
  "functions": {
    "api/**/*.ts": {
      "includeFiles": [
        "backend/dist/**",
        "backend/scripts/**",
        "backend/types/**",
        "node_modules/.prisma/client/**",
        "node_modules/@prisma/client/**"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
