{
  "version": 2,
  "framework": "vite",
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_VERSION": "20"
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
